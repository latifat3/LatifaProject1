<form action="/students/<%=@student[0][0] %>" method="post">

<div class="row">
	<div class="large-6 columns">
		<div class="row collapse prefix-radius">
			<div class="small-3 columns">
					<span class ="prefix">First Name</span>
				</div>
				<div class="small-9 columns">
					<input type="text" name="firstname" value="<%=@student[0][1]%>">
				</div>
			</div>
		</div>
		<div class="large-6 columns">
		<div class="row collapse prefix-radius">
			<div class="small-3 columns">
					<span class ="prefix">Last Name</span>
				</div>
				<div class="small-9 columns">
					<input type="text" name="lastname" value="<%=@student[0][2]%>">
				</div>
			</div>
		</div>
		<div class="large-6 columns">
		<div class="row collapse prefix-radius">
			<div class="small-3 columns">
					<span class ="prefix">Email</span>
				</div>
				<div class="small-9 columns">
					<input type="text" name="email" value="<%=@student[0][3]%>">
				</div>
			</div>
		</div>
		<div class="large-6 columns">
		<div class="row collapse prefix-radius">
			<div class="small-3 columns">
					<span class ="prefix">Major</span>
				</div>
				<div class="small-9 columns">
					<input type="text" name="major" value="<%=@student[0][4]%>">
				</div>
			</div>
		</div>
		<div class="large-6 columns">
		<div class="row collapse prefix-radius">
			<div class="small-3 columns">
					<span class ="prefix">Graduation Status</span>
				</div>
				<div class="small-9 columns">
					<input type="text" name="graduationstatus" value="<%=@student[0][5]%>">
				</div>
			</div>
		</div>
		<input type="submit" class="button" value="Submit">
	</div>
</form>
